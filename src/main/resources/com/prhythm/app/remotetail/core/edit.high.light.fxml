<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.prhythm.app.remotetail.core.HighLightEditorController">
    <children>
        <CheckBox fx:id="searchPattern" prefHeight="27.0" text="High light search pattern"
                  onAction="#searchPatternAction"/>
        <ListView fx:id="rules" prefHeight="200.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </ListView>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Add" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" onAction="#addRule">
                    <GridPane.margin>
                        <Insets right="2.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Delete" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" onAction="#removeRule" fx:id="removeItem">
                    <GridPane.margin>
                        <Insets right="2.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Move Up" GridPane.columnIndex="2"
                        GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" onAction="#moveRuleUp" fx:id="moveUp">
                    <GridPane.margin>
                        <Insets right="2.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Move Down" GridPane.columnIndex="3"
                        GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" onAction="#moveRuleDown" fx:id="moveDown"/>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox>
                    <children>
                        <Label text="Foreground Color"/>
                        <ColorPicker fx:id="foreground" onAction="#foregroundAction"/>
                    </children>
                </VBox>
                <VBox GridPane.columnIndex="1">
                    <children>
                        <Label text="Background Color"/>
                        <ColorPicker fx:id="background" onAction="#backgroundAction"/>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </GridPane>
        <Label text="Pattern">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="patternText">
            <VBox.margin>
                <Insets top="3.0"/>
            </VBox.margin>
        </TextField>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <CheckBox fx:id="ignoreCase" mnemonicParsing="false" text="Ignore Case" onAction="#ignoreCaseAction"/>
                <CheckBox fx:id="bold" mnemonicParsing="false" text="Bold" GridPane.columnIndex="1"
                          onAction="#boldAction"/>
                <CheckBox fx:id="italic" mnemonicParsing="false" text="Italic" GridPane.columnIndex="2"
                          onAction="#italicAction"/>
            </children>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
