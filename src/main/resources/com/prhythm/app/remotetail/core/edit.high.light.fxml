<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.prhythm.app.remotetail.core.HighLightEditorController">
    <children>
        <CheckBox fx:id="" prefHeight="27.0" text="High light search patterns"/>
        <ListView prefHeight="200.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </ListView>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Add" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets right="2.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Delete" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets right="2.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Move Down" GridPane.columnIndex="2"
                        GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets right="2.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" prefWidth="90.0" text="Move Up" GridPane.columnIndex="3"
                        GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"/>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox>
                    <children>
                        <Label text="Foreground Color"/>
                        <ColorPicker/>
                    </children>
                </VBox>
                <VBox GridPane.columnIndex="1">
                    <children>
                        <Label text="Background Color"/>
                        <ColorPicker/>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </GridPane>
        <Label text="Pattern">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField>
            <VBox.margin>
                <Insets top="3.0"/>
            </VBox.margin>
        </TextField>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <CheckBox mnemonicParsing="false" text="Ignore Case"/>
                <CheckBox mnemonicParsing="false" text="Bold" GridPane.columnIndex="1"/>
                <CheckBox mnemonicParsing="false" text="Italic" GridPane.columnIndex="2"/>
            </children>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
