                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" text="Add" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                        GridPane.valignment="CENTER"/>
                <Button mnemonicParsing="false" text="Delete" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" text="Move Up" GridPane.columnIndex="3" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" text="Move Down" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                        GridPane.hgrow="ALWAYS"/>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
