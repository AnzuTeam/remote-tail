        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="Foreground Color"/>
                        <ColorPicker/>
                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                    <children>
                        <Label text="Background Color"/>
                        <ColorPicker/>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </GridPane>
        <Label text="Label">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField>
            <VBox.margin>
                <Insets top="3.0"/>
            </VBox.margin>
        </TextField>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <CheckBox mnemonicParsing="false" text="Ignore Case"/>
                <CheckBox mnemonicParsing="false" text="Bold" GridPane.columnIndex="1"/>
                <CheckBox mnemonicParsing="false" text="Italic" GridPane.columnIndex="2"/>
            </children>
