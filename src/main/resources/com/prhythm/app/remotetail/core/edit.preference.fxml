<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.prhythm.app.remotetail.core.PreferenceEditorController">
    <children>
        <HBox>
            <children>
                <VBox>
                    <children>
                        <Label prefHeight="27" text="%rmt.dialog.preference.edit.font.family">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                        <Label prefHeight="27" text="%rmt.dialog.preference.edit.font.size">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                        <Label prefHeight="27" text="%rmt.dialog.preference.edit.charset">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <TextField fx:id="fontFamily">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="fontSize">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="charset">
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </TextField>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
